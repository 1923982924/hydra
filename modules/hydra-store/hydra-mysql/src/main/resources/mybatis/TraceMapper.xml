<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jd.bdp.hydra.mysql.persistent.dao.TraceMapper">

    <resultMap id="TraceResultMap" type="TraceEntity">

    </resultMap>

    <select id="findTrace" parameterType="map" resultMap="TraceResultMap">
        SELECT * FROM trace WHERE time >=#{startTime} limit #{num}
    </select>

    <insert id="addTrace" parameterType="TraceResultMap" >
        INSERT INTO trace (time,traceId,duration,service)
        VALUES(#{time}#{traceId},#{duration},#{service})
    </insert>


</mapper>