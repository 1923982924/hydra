<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:protocol name="dubbo" port="20996" />
    <dubbo:service interface="com.jd.bdp.hydra.dubbomonitor.HydraService" ref="hydraService" filter="-hydra" >
    </dubbo:service>
    <bean id="hydraService" class="com.jd.bdp.sending.TestHydraService">
        <property name="collectSpanService" ref="collectSpanService"></property>
    </bean>
    <dubbo:registry file="~/.dubbo/hydraTest" />

    <!-- 用于测试 -->
    <bean id="collectSpanService" class="com.jd.bdp.sending.TestCollectSpanServiceImpl" />
    <dubbo:service interface="com.jd.bdp.sending.TestCollectSpanService" ref="collectSpanService" filter="-hydra" timeout="10000000">
    </dubbo:service>
</beans>