<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--服务引用-->
    <dubbo:reference id="referenceA" interface="com.jd.bdp.service.inter.InterfaceA" check="false" timeout="3000">
    </dubbo:reference>

    <!--Root调用服务(直接拿到A服务)-->
    <bean id="trigger" class="com.jd.bdp.trigger.impl.Trigger">
        <property name="rootService" ref="referenceA"></property>
    </bean>

</beans>