<assembly>
    <id>jd</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/src/main/resources</directory>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>**.**</include>
            </includes>
            <excludes>
                <exclude>/scripts</exclude>
            </excludes>
        </fileSet>
        <!--windows bat-->
        <fileSet>
            <directory>/src/main/resources/scripts/windows</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>startABC/*.bat</include>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <!--linux shell-->
        <fileSet>
            <directory>/src/main/resources/scripts/linux</directory>
            <outputDirectory>/bin</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>

            <includes>
                <include>startABC/*.sh</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/src/main/resources/log</directory>
            <outputDirectory>/log</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
